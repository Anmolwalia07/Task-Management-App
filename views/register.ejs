<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register New User</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col items-center justify-center h-screen text-white bg-gray-900">

  <!-- Registration Form -->
  <form class="bg-gray-800 text-white w-[400px] px-10 py-8 rounded-lg shadow-lg" 
        action="/register" method="POST">
    <h1 class="mb-8 text-3xl font-bold text-center">Register a New User</h1>

    <% if (error) { %>
      <p class="mb-4 text-center text-red-500"><%= error %></p>
    <% } %>

    <!-- Name Input -->
    <div class="mb-5">
      <label class="block mb-2 text-xl font-semibold" for="name">Name:</label>
      <input 
        class="w-full p-3 text-white placeholder-gray-400 bg-gray-700 border-2 border-gray-600 rounded focus:outline-none focus:border-blue-500" 
        type="text" id="name" name="name" placeholder="Enter full name" required>
    </div>

    <!-- Email Input -->
    <div class="mb-5">
      <label class="block mb-2 text-xl font-semibold" for="email">Email:</label>
      <input 
        class="w-full p-3 text-white placeholder-gray-400 bg-gray-700 border-2 border-gray-600 rounded focus:outline-none focus:border-blue-500" 
        type="email" id="email" name="email" placeholder="Enter email" required>
    </div>

    <!-- Password Input -->
    <div class="mb-5">
      <label class="block mb-2 text-xl font-semibold" for="password">Password:</label>
      <input 
        class="w-full p-3 text-white placeholder-gray-400 bg-gray-700 border-2 border-gray-600 rounded focus:outline-none focus:border-blue-500" 
        type="password" id="password" name="password" placeholder="Enter password" required>
    </div>

    <!-- Role Selector -->
    <div class="mb-8">
      <label class="block mb-2 text-xl font-semibold" for="role">Role:</label>
      <select 
        id="role" name="role" 
        class="w-full p-3 text-white bg-gray-700 border-2 border-gray-600 rounded focus:outline-none focus:border-blue-500">
        <option value="user">User</option>
            </select>
    </div>

    <!-- Submit Button -->
    <button 
      class="w-full p-3 font-semibold text-white transition bg-blue-500 rounded hover:bg-blue-600" 
      type="submit">
      Create
    </button>
  </form>

  <!-- Back to Dashboard Link -->
  <a href="/dashboard" 
     class="px-6 py-2 mt-5 text-center transition border-2 border-white rounded hover:bg-white hover:text-gray-900">
    Back to Dashboard
  </a>

</body>
</html>
